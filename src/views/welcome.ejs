        *{
            margin:0;
            padding: 0;
            box-sizing: border-box;
        }
        .conteiner{
            height: 100%;
            background: linear-gradient(45deg , #001, #000);
            display: flex;
            align-items: center;
            flex-direction: column;
            justify-content: center;
            gap: 25px;
        }
        .conteiner h1{
            font-size: 110px;
