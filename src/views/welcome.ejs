            color: #fff;
        }
        .conteiner a{
            border:none;
            padding: 15px 35px;
            color:#eef;
            background-color: #22f;
            border-radius: 5px;
            text-decoration: none;
        }
        .conteiner p{
            width: 40%;
            max-width: 450px;
            color: #fff;
            font-weight: 100;
            text-align: center;
            font-family: 'Source Sans Pro', sans-serif;
        }
        .conteiner span{
            display: flex;
            flex-direction: row;
            gap: 30px;
        }
        .conteiner span svg{
            color: #fff;
            font-size: 30px;
            width: 30px;
            height: 30px;
        }
        .conteiner span button{
            background-color: transparent;
            border: none;
            cursor: pointer;
        }
        .conteiner i{
            width: 100%;
            position: absolute;
            top: 0px;
            left: 0px;
            padding: 10px;
            text-align: right;
        }
        .conteiner i a{
            background-color: transparent;
            color:#fff;

        }
    </style>

</head>
